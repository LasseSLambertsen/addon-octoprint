{
    "name": "Octoprint Slim",
    "version": "0.1.0-alpha",
    "slug": "octoprint-slim",
    "description": "Octoprint add-on for Hass.io, slimmed version (untested)",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "url": "https://github.com/alryaz/addon-octoprint",
    "startup": "application",
    "webui": "http://[HOST]:[PORT:5000]",
    "boot": "manual",
    "ingress": true,
    "ingress_port": 5000,
    "panel_icon": "mdi:printer",
    "panel_title": "OctoPrint",
    "ports": {
        "5000/tcp": 5000
    },
    "ports_description": {
        "5000/tcp": "OctoPrint WebUI"
    },
    "host_network": false,
    "auto_uart": true,
    "map": ["config:rw"],
    "options": {
        "octoprint": {
            "server": {
                "commands": {
                    "serverRestartCommand": "s6ctl restart"
                }
            },
            "accessControl": {
                "enabled": false
            },
            "devel": {
                "virtualPrinter": {
                    "enabled": true
                }
            },
            "folder": {
                 "timelapse": "/config/octoprint/timelapse",
                 "uploads": "/config/octoprint/uploads",
                 "watched": "/config/octoprint/watched",
            },
            "plugins": {
                "pluginmanager": {
                    "pip_force_user": true
                }
            },
            "serial": {
                "additionalPorts": [
                    "/dev/ttyS*",
                    "/dev/ttyUSB*"
                ]
            }
        }
    },
    "schema": {},
}
